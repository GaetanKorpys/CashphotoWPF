                    <TextBox x:Name="PoidsRecap" TextChanged="RecapPoids_TextChanged" GotFocus="PoidsRecap_GotFocus" BorderThickness="0" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Margin="5,0,0,0" />
